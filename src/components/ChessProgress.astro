---
export interface Props {
  points: number;
  totalGames: number;
}

const { points, totalGames } = Astro.props;
---

<div class="w-full flex gap-4 mt-6 mb-3 items-center justify-center">
  <progress class="progress progress-primary max-w-48" value={points} max={totalGames}></progress>
  <span class="text-nowrap">
    {points} / {totalGames}
  </span>
</div>
