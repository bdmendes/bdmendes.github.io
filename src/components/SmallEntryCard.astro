---
export interface Props {
  title: string;
  img: ImageMetadata;
  description: string;
  mainBadge?: [string, string];
  secondaryBadge?: [string, string];
  tertiaryBadge?: [string, string];
}

const { title, tertiaryBadge, img, description, mainBadge, secondaryBadge } =
  Astro.props;
import { Image } from "astro:assets";
---

<div class="p-3 flex flex-col gap-2 shadow-2xl bg-base-300 rounded-md">
  <div
    class="w-full gap-3 flex flex-col sm:flex-row items-start pb-0"
  >
    {
      (
        <Image
          src={img}
          format="webp"
          alt={title}
          class="sm:max-w-16 rounded aspect-square object-cover max-h-32"
        />
      )
    }
    <div class="grow w-full">
      <h1 class="text-lg font-bold mr-2">
        {title}
      </h1>
    </div>
  </div>
  <div class= w-full">
    <div class="grow w-full">
      <div class="card-actions mt-2 mb-1">
        {
          mainBadge && (
            <a href={mainBadge[1]} class="badge badge-primary">
              {mainBadge[0]}
            </a>
          )
        }
        {
          secondaryBadge && (
            <a href={secondaryBadge[1]} class="badge badge-secondary">
              {secondaryBadge[0]}
            </a>
          )
        }
        {
          tertiaryBadge && (
            <a href={tertiaryBadge[1]} class="badge badge-outline">
              {tertiaryBadge[0]}
            </a>
          )
        }
      </div>
    </div>
    <p class="pb-1 pt-2 text-sm">{description}</p>
  </div>
</div>
