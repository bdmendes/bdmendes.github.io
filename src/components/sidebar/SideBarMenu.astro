---
import { ROUTES } from "src/config";

const { sideBarActiveItemID } = Astro.props;
const activeClass = "active";
const cleanId = sideBarActiveItemID?.replace(/\d+/g, "");
---

<ul class="menu grow shrink menu-md overflow-y-auto items-center">
    {
        Object.entries(ROUTES).map(([key, value]) => (
            <li>
                <a
                    class={`py-3 text-base mb-2 ${cleanId == key ? activeClass : ""}`}
                    id={key}
                    href={key == "home" ? "/" : "/" + key}
                >
                    {value}
                </a>
            </li>
        ))
    }
</ul>
