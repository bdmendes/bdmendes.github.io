---
import { Icon } from "astro-icon/components";
import { SOCIALS } from "../../config";
---

<div class="pb-5 pt-3 flex justify-center sticky bottom-0 w-full bg-base-200">
    {
        Object.entries(SOCIALS).map(([key, value]) => (
            <a
                href={value.url}
                target="_blank"
                class="mx-3"
                aria-label={key}
                title={key}
            >
                <Icon name={value.icon} size="24" />
            </a>
        ))
    }
</div>
