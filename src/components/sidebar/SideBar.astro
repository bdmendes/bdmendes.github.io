---
import SideBarFooter from "./SideBarFooter.astro";
import SideBarMenu from "./SideBarMenu.astro";

export interface Props {
  sideBarActiveItemID?: string;
}

const { sideBarActiveItemID } = Astro.props;
---

<div class="drawer-side z-40 no-print">
  <label for="my-drawer" class="drawer-overlay"></label>
  <aside
    class="px-2 pt-2 min-h-[100dvh] w-52 bg-base-100 text-base-content flex flex-col"
  >
    <a href="/" class="my-4 self-center max-h-[50svh] aspect-square h-24">
      <img
        class="object-contain w-full h-full rounded-full"
        src="/assets/about-me/bdmendes-2024.jpg"
      />
    </a>
    <div class="flex flex-col justify-between grow pagefind-exclude">
      <SideBarMenu sideBarActiveItemID={sideBarActiveItemID} />
      <SideBarFooter />
    </div>
  </aside>
</div>
