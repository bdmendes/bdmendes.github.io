---
import { METADATA } from "src/config";
import "../styles/slides.css";

export interface Props {
    title: string;
    body: string;
}

const { title, body } = Astro.props;
---

<html>
    <head>
        <meta charset="utf-8" />
        <title>{`${title} | ${METADATA.title}`}</title>
    </head>

    <body>
        <textarea id="source">{body}</textarea>
        <script is:inline src="/lib/remark.js" type="text/javascript"></script>
        <script is:inline type="text/javascript">
            remark.create({ navigation: { scroll: false }, highlightStyle: "sunburst" });
        </script>
    </body>
</html>
