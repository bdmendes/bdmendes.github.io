---
import PostLayout from "./PostLayout.astro";
import "../styles/chess.css";

export interface Props {
  white?: string;
  black?: string;
  result: string;
  tournament: string;
  whiteElo?: number;
  blackElo?: number;
  pgn: string;
  date: Date;
  description: string;
}

const {
  white = "Bruno Mendes",
  black = "Bruno Mendes",
  result,
  tournament,
  whiteElo,
  blackElo,
  pgn,
  date,
  description,
} = Astro.props;
const title = `${white} ${whiteElo ? `(${whiteElo})` : ""} ${result} ${black} ${blackElo ? `(${blackElo})` : ""}`;
const flipped = black === "Bruno Mendes";
---

<PostLayout
  title={title}
  customHeader={[
    `${white} ${whiteElo ? `(${whiteElo})` : ""}`,
    result,
    `${black} ${blackElo ? `(${blackElo})` : ""}`,
  ]}
  date={date}
  badge="chess"
  tags={[tournament]}
  createYearBadge={false}
  tagEndpoint="tournament"
  shrink={false}
  description={description}
>
  <chess-game data-pgn={pgn} data-flipped={flipped}> </chess-game>
  <div id="board"></div>
  <div class="mt-3 w-full text-center" id="rotate-hint">
    Rotate your device to view the game analysis and explore the move list.
  </div>
</PostLayout>

<style>
  @media screen and (min-width: 501px) {
    #rotate-hint {
      display: none;
    }
  }
</style>

<script>
  import LichessPgnViewer from "lichess-pgn-viewer";
  class ChessGame extends HTMLElement {
    connectedCallback() {
      LichessPgnViewer(document.getElementById("board")!, {
        pgn: this.dataset.pgn,
        orientation: this.dataset.flipped === "true" ? "black" : "white",
      });
    }
  }
  customElements.define("chess-game", ChessGame);
</script>
