---
import BaseLayout from "../layouts/BaseLayout.astro";
import HorizontalCard from "../components/HorizontalCard.astro";
import { getCollection } from "astro:content";
import {
  createSlug,
  extractDate,
  extractDescription,
  augmentTagsWithDate,
  createChessSlug,
  createChessTitle,
} from "../lib/util";
import LargeTitle from "@components/LargeTitle.astro";

const posts = (await getCollection("blog")).sort(
  (a, b) => extractDate(b.id).valueOf() - extractDate(a.id).valueOf(),
);
const lastPost = posts[0];

const poems = (await getCollection("poetry")).sort(
  (a, b) => extractDate(b.id).valueOf() - extractDate(a.id).valueOf(),
);
const lastPoem = poems[0];

const slides = (await getCollection("slides")).sort(
  (a, b) => extractDate(b.id).valueOf() - extractDate(a.id).valueOf(),
);
const lastSlide = slides[0];

const chessGames = (await getCollection("chess")).sort(
  (a, b) => extractDate(b.id).valueOf() - extractDate(a.id).valueOf(),
);
const lastGame = chessGames[0];
---

<BaseLayout title="Home" sideBarActiveItemID="home" currentPage={1}>
  <div class="mb-16">
    <div class="text-3xl font-bold md:font-normal md:text-xl pt-0 py-4 md:py-1">
      Hey there
    </div>
    <div class="text-5xl font-bold hidden md:block">I'm Bruno Mendes.</div>
    <div class="text-lg py-1 px-4 md:px-0 md:py-3">
      <p>
        I'm a software engineer based in Porto, Portugal, holding an MSc from
        FEUP. I enjoy crafting elegant code, playing chess, and exploring
        interesting ideas through discussions and writingâ€”hopefully offering
        value to others along the way.
      </p>
    </div>
  </div>

  <LargeTitle title="Latest content" />

  <HorizontalCard
    title={lastPost.data.title}
    img={lastPost.data.hero}
    description={extractDescription(lastPost.body)}
    url={"/blog/" + createSlug(lastPost.data.title)}
    badge={"blog"}
    tags={augmentTagsWithDate(lastPost.data.tags, lastPost.id)}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title={lastPoem.data.title}
    description={extractDescription(lastPoem.body)}
    url={"/poetry/" + createSlug(lastPoem.data.title)}
    badge={"poetry"}
    tags={augmentTagsWithDate(lastPoem.data.tags, lastPoem.id)}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title={lastSlide.data.title}
    description={lastSlide.data.description}
    url={"/slides/" + createSlug(lastSlide.data.title)}
    badge={"slides"}
    tags={augmentTagsWithDate(lastSlide.data.tags, lastSlide.id)}
  />
  <div class="divider my-0"></div>
  <HorizontalCard
    title={createChessTitle(lastGame)}
    badge="chess"
    url={"/chess/" + createChessSlug(lastGame)}
    tags={[lastGame.data.tournament]}
  />
</BaseLayout>
