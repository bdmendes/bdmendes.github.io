---
import BaseLayout from "@layouts/BaseLayout.astro";
import HorizontalCard from "@components/HorizontalCard.astro";
import PaginationButtons from "@components/PaginationButtons.astro";
import { getCollection } from "astro:content";
import { createSlug, extractDescription } from "../../../../lib/util";
import { PAGINATION_SIZE } from "src/config";
import LargeTitle from "@components/LargeTitle.astro";

export async function getStaticPaths({ paginate }) {
  const all_posts = await getCollection("blog");
  const all_tags = all_posts.flatMap((post) => {
    return post.data.tags || [];
  });

  return all_tags.flatMap((tag) => {
    const filtred_posts = all_posts.filter((post) => {
      return post.data.tags?.includes(tag);
    });
    return paginate(filtred_posts, {
      params: { tag },
      pageSize: PAGINATION_SIZE,
    });
  });
}

const { page } = Astro.props;
const { tag } = Astro.params;
---

<BaseLayout title={"Blog | " + tag} sideBarActiveItemID="blog">
  <LargeTitle title={`Blog | ${tag}`} />
  <ul>
    {
      page.data.map((post) => (
        <>
          <HorizontalCard
            title={post.data.title}
            img={post.data.hero}
            description={extractDescription(post.body)}
            url={"/blog/" + createSlug(post.data.title, post.slug)}
            target="_self"
            badge={post.data.badge}
            tags={post.data.tags}
          />
          <div class="divider my-0" />
        </>
      ))
    }
  </ul>
  <PaginationButtons page={page} />
</BaseLayout>
